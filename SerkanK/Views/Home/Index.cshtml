

<div id="ContentArea" class="py-5 container bg-light">

    @if (ViewBag.Error != null && !string.IsNullOrWhiteSpace(ViewBag.Error.ToString()))
    {
        <div class="alert alert-danger" role="alert" aria-live="assertive" aria-atomic="true">
            @Html.Raw(ViewBag.Error)
        </div>
    }

    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner rounded">
            <div class="carousel-item active">
                <img src="img/sliderPhotos/slider_placeholder1.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block text-white rounded">
                    <h5>Exclusive Limited-Time Offer!</h5>
                    <p>
                        Details about special interest rates, cashback offers, or promotions on financial products like credit cards or savings accounts.
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/sliderPhotos/slider_placeholder2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block text-white rounded">
                    <h5>Learn to Manage Your Finances Better</h5>
                    <p>Tips and links to resources providing financial advice, budgeting tools, or information on improving credit scores.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/sliderPhotos/slider_placeholder3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block text-white rounded">
                    <h5>Introducing Our Latest Savings Account</h5>
                    <p>
                        Information about a new financial product, its features, and how customers can benefit from it.
                    </p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div id="mainAdsContents">

        <div class="card col-9 float-start adsContents">
            <div class="py-4">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        No Fees for EFT/FAST/SWIFT and Bill Payments!
                    </h5>
                    <p class="card-text text-center lead">
                        You will never incur any charges for your daily banking transactions!
                    </p>
                </div>
            </div>
        </div>

        <div class="card col-9 float-end adsContents">
            <div class="py-4">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        Utilize Your Loan With No Fees and Low Interest Rates!
                    </h5>
                    <p class="card-text text-center lead">
                        Apply for a personal loan anytime through our online banking, and use your credit instantly without incurring any charges.
                    </p>
                </div>
            </div>
        </div>

        <div class="card col-9 float-start adsContents">
            <div class="py-4">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        Fill Out Our Short Application Form Now!
                    </h5>
                    <p class="card-text text-center lead">
                        Completing our application form will take you a maximum of 2 minutes, and afterward, we will quickly give you a call to finalize your application and open your account.
                    </p>
                </div>
            </div>
        </div>

    </div>

</div>