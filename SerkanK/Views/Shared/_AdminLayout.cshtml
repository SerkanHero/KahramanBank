<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KahramanBank - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/extra.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SerkanK.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/kahramanBankIco.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/img/kahramanBankIco.ico" type="image/x-icon">
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container p-2">

            <h3 class="h2 text-center pb-2">KahramanBank</h3>

            <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-center currentVisit text-dark" href="@Url.Action("Inside", "Admin")">Home</a>
                            </li>
                            <span class="navbar-text d-none d-lg-block mx-2">|</span>
                            <hr class="navbar-text d-none d-xs-block d-sm-block d-md-block d-lg-none mx-2 py-0 my-1"></hr>
                            <li class="nav-item">
                                <a class="nav-link text-center text-dark" href="@Url.Action("Logout", "Admin")">Exit</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </div>

    </header>

    @RenderBody()

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/jquery.slim.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
