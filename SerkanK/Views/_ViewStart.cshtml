@{
    var routeUrl = ViewContext.RouteData.Values["Controller"].ToString();

    switch (routeUrl)
    {
        case "User":
            Layout = "_OnlineBankLayout";
            break;
        case "Admin":
            Layout = "_AdminLayout";
            break;
        case "Receipt":
            Layout = null;
            break;
        case "Home":
        default:
            Layout = "_Layout";
            break;
    }
}